---
import type { Project } from "../data/projects";

const {
  title,
  description,
  tech,
  status,
  category,
  github,
  codeberg,
  gitlab,
  demo,
  image,
  highlights,
  featured = false,
} = Astro.props as Project;
---

<div class={`project-card ${featured ? "project-card-featured" : ""}`}>
  {
    featured && image && (
      <div class="project-image">
        <img src={image || "/placeholder.svg"} alt={title} />
      </div>
    )
  }
  <div class="project-card-content">
    <div class="project-card-header">
      <div class="project-title-section">
        <h3 class="project-card-title">{title}</h3>
        {category && <span class="project-category">{category}</span>}
      </div>
      <span class={`project-status ${status.toLowerCase().replace(" ", "-")}`}
        >{status}</span
      >
    </div>
    <p class="project-card-description">{description}</p>
    {
      highlights && (
        <div class="project-highlights">
          <h4>Key Features:</h4>
          <ul>
            {highlights.map((highlight) => (
              <li>{highlight}</li>
            ))}
          </ul>
        </div>
      )
    }
    <div class="project-tech">
      {tech.map((item) => <span class="tech-tag">{item}</span>)}
    </div>
    {
      (github || codeberg || gitlab || demo) && (
        <div class="project-links">
          {github && (
            <a
              href={github}
              target="_blank"
              rel="noopener noreferrer"
              class="project-link github-link"
            >
              <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="currentColor"
              >
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
              </svg>
              View Code
            </a>
          )}
          {codeberg && (
            <a
              href={codeberg}
              target="_blank"
              rel="noopener noreferrer"
              class="project-link github-link"
            >
              <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="currentColor"
              >
                <path d="M11.955.49A12 12 0 0 0 0 12.49a12 12 0 0 0 1.832 6.373L11.838 5.928a.187.14 0 0 1 .324 0l10.006 12.935A12 12 0 0 0 24 12.49a12 12 0 0 0-12-12 12 12 0 0 0-.045 0zm.375 6.467 4.416 16.553a12 12 0 0 0 5.137-4.213z" />
              </svg>
              View Code
            </a>
          )}
          {demo && (
            <a
              href={demo}
              target="_blank"
              rel="noopener noreferrer"
              class="project-link demo-link"
            >
              <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                <polyline points="15,3 21,3 21,9" />
                <line x1="10" y1="14" x2="21" y2="3" />
              </svg>
              Live Demo
            </a>
          )}
        </div>
      )
    }
  </div>
</div>
